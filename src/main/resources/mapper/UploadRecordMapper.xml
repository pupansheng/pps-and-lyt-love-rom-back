<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pps.back.frame.pupansheng.custom.mapper.UploadRecordMapper">

    <resultMap type="com.pps.back.frame.pupansheng.custom.entity.UploadRecordPo" id="UploadRecordMap">
                    <result property="id" column="id" jdbcType="VARCHAR"/>
                    <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
                    <result property="suffix" column="suffix" jdbcType="VARCHAR"/>
                    <result property="optTime" column="opt_time" jdbcType="TIMESTAMP"/>
            </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UploadRecordMap">
        select
          id, file_name, suffix, opt_time
        from pps-lyt-room.upload_record
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UploadRecordMap">
        select
        id, file_name, suffix, opt_time
        from pps-lyt-room.upload_record
        <where>
                            <if test="id != null and id != ''">
                    and id = #{id,jdbcType=VARCHAR}
                </if>
                            <if test="fileName != null and fileName != ''">
                    and file_name = #{fileName,jdbcType=VARCHAR}
                </if>
                            <if test="suffix != null and suffix != ''">
                    and suffix = #{suffix,jdbcType=VARCHAR}
                </if>
                            <if test="optTime != null">
                    and opt_time = #{optTime,jdbcType=TIMESTAMP}
                </if>

        </where>
    </select>
    
    
    
    
    
      <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into pps-lyt-room.upload_record(id,file_name, suffix, opt_time)
        values (#{id,jdbcType=VARCHAR},#{fileName,jdbcType=VARCHAR}, #{suffix,jdbcType=VARCHAR}, #{optTime,jdbcType=TIMESTAMP})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update pps-lyt-room.upload_record
        <set>
                            <if test="fileName != null and fileName != ''">
                    file_name = #{fileName},
                </if>
                            <if test="suffix != null and suffix != ''">
                    suffix = #{suffix},
                </if>
                            <if test="optTime != null">
                    opt_time = #{optTime},
                </if>
                    </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from pps-lyt-room.upload_record where id = #{id,jdbcType=VARCHAR}
    </delete>
     <!--通过主键删除 逻辑删除-->
     <update id="deleteByIdWithFalse">
       update pps-lyt-room.upload_record
        set flag=0
        where id = #{id}
     </update>
    
    
</mapper>